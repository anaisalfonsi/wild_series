{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
<div class="container">
    <h1>Actor index</h1>
    <div class="container d-flex justify-content-end">
        <a href="{{ path('actor_new') }}" class="btn border-blue text-pink mt-4 mb-4">Create new</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>{{ actor.photo }}</td>
                <td>{{ actor.slug }}</td>
                <td>
                    <a href="{{ path('actor_show', {'slug': actor.slug}) }}">show</a>
                    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">Create new</a>
</div>
{% endblock %}
